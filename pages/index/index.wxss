/* 轮播图样式 */
.banners {
  width: 100%;
  height: 300rpx;
}

.banner {
  width: 100%;
  height: 100%;
}

/* 导航栏样式 */

.nav-container {
  display: flex;
}

.nav-item {
  display: flex;
  flex-direction: column;
  width: 20%;
  align-items: center;
  font-size: 28rpx;
}

.iconfont {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  line-height: 100rpx;
  text-align: center;
  background-color: rgb(240, 19, 19);
  color: white;
  font-size: 48rpx;
  margin: 20rpx 0;
}