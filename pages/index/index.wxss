/* pages/index/index.wxss */

/* 轮播图样式 */
.banners {
  width: 100%;
  height: 300rpx;
}

.banner {
  width: 100%;
  height: 100%;
}

/* 导航栏样式 */

.nav-container {
  display: flex;
}

.nav-item {
  display: flex;
  flex-direction: column;
  width: 20%;
  align-items: center;
  font-size: 28rpx;
}

.iconfont {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  line-height: 100rpx;
  text-align: center;
  background-color: rgb(240, 19, 19);
  color: white;
  font-size: 48rpx;
  margin: 20rpx 0;
}

/* 推荐歌曲 */
.recommend-container {
  padding: 20rpx;
  margin-top: 20rpx;
}

.recommend-container .title {
  display: block;
  color: #666666;
  padding-bottom: 10rpx;
}

.recommend-container .header {
  padding-bottom: 16rpx;
}

.recommend-container .more {
  float: right;
  font-size: 20rpx;
  border: 2rpx solid #666666;
  padding: 6rpx 14rpx;
  border-radius: 20rpx;
}

.recommend-container .recommend-scroller {
  display: flex;
}

.recommend-container .recommend-scroller .recommend-item {
  width: 200rpx;
  margin-right: 10rpx;
}

.recommend-item image {
  width: 200rpx;
  height: 200rpx;
  border-radius: 16rpx;
}

.recommend-item text {
  font-size: 26rpx;
  /* 单行省略号 */
  /* display: block;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis; */
  /* 多行文本省略 */
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
  text-overflow: ellipsis;


}