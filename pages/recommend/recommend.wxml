<!--pages/recommend/recommend.wxml-->
<view class="recommendContainer">
  <view class="backgroundPic">
    <image mode="aspectFill" src="/static/images/cirlce.jpg">
    </image>
    <view class="date">
      <text class="month">{{month}}</text>
      <text style="margin: 0 10rpx">/</text>
      <text class="day">{{day}}</text>
    </view>
  </view>

  <view class="playListArea">
    <view class="toolbar">
      <text>播放全部</text>
      <text>多选</text>
    </view>
    <view class="playList">
      <view class="songItem" wx:for="{{recommendSongs}}" wx:key="id">
        <view class="songInfo">
          <image class="poster" src="{{item.album.blurPicUrl}}"></image>
          <view>
            <text class="title">{{item.name}}</text>
            <text class="author">{{item.artists[0].name}}</text>
          </view>
        </view>
        <text class="more iconfont icon-gengduo"></text>
      </view>
    </view>
  </view>

</view>