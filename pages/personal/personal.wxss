/* pages/personal/personal.wxss */
.personalContainer {
  position: relative;
  /* width: 100%; */
  /* height: 100%; */
}

.userSection {
  position: absolute;
  width: 100vw;
  height: 100vh;
  background-color: #b9d4fc;
  top: 0;
  left: 0;
  z-index: -1;
}

.coverSeciton {
  box-sizing: border-box;
  position: absolute;
  background-color: #fafafa;
  padding: 30rpx;
  width: 100vw;
  left: 0;
  top: 30vh;
  height: 70vh;
  z-index: 10;
}

.coverSeciton .userToolbar {
  box-sizing: border-box;
  display: flex;
  width: 100%;
  align-items: center;
  justify-content: space-between;
  background-color: #fff;
  padding: 24rpx;
  border-radius: 20rpx;
}

.userToolbar .item {
  text-align: center;
}

.item .iconfont {
  color: #d43c33;
  font-size: 50rpx;
  margin-bottom: 10rpx;
}

.item text {
  font-size: 24rpx;
}

.recent,
.myMusic,
.myStart,
.myRadio {
  box-sizing: border-box;
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-top: 20rpx;
  background-color: #ffffff;
  padding: 30rpx 20rpx;
  border-bottom: 1px solid #fafafa
}

