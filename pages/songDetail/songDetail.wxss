/* pages/songDetail /songDetail.wxss */
.songDetailContainer {
  width: 100vw;
  height: 100vh;
  background-color: rgba(0, 0, 0, .65);
  overflow: hidden;
}

.bck {
  position: absolute;
  z-index: -1;
  width: 100vw;
  height: 100vh;
  filter: blur(20rpx)
}

.content {
  /* position: relative; */
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
  align-items: center;
  height: 100vh;
  /* justify-content: space-around; */
}

.content .needle {
  position: relative;
  width: 150rpx;
  height: 245rpx;
  /* left: 50%; */
  left: 100rpx;
  z-index: 20;
  transition: all 1s linear;
  transform-origin: 10rpx 10rpx;
}

.moveNeedle {
  transform: rotate(20deg);
}

@keyframes rotate {
  0% {
    transform: rotate(0);
  }

  50% {
    transform: rotate(180deg);
  }

  100% {
    transform: rotate(360deg);
  }
}


.rotateDisc {
  animation: rotate 10s linear infinite;
  animation-delay: 1s;
}

/* .stopDisc {
  animation: rotateEnd 3s linear forwards
} */

.content .posterArea {
  position: relative;
  display: flex;
  width: 570rpx;
  height: 570rpx;
  justify-content: center;
  z-index: 1;
  margin-top: -50rpx;
}

.posterArea .disc {
  position: relative;
  width: 100%;
  height: 100%;
  z-index: 10;
}

.posterArea .poster {
  position: absolute;
  width: 380rpx;
  height: 380rpx;
  border-radius: 200rpx;
  top: 95rpx;
  z-index: 1;
}

.content .songInfo {
  width: 500rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  /* justify-content: center; */
  margin-top: 20rpx;
  /* overflow: hidden; */
}

.songInfo .songName,
.songInfo .artistName {
  width: 100%;
  font-size: 40rpx;
  color: rgba(255,255,255, .65);
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  text-align: center;
}
.songInfo .artistName {
  font-size: unset;
}

.content .playTool {
  display: flex;
  justify-content: space-around;
  width: 500rpx;
  padding: 20rpx 0;
  /* border: 1px solid #fff; */
  margin: 30rpx 0 20rpx;
}

.playTool .iconfont {
  font-size: 40rpx;
  color: rgba(255,255,255, .65);
}